<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom Buttons -->
    <style name="NormalButtons" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/H_55dp</item>
        <item name="fontFamily">@font/dm_bold</item>
        <item name="android:textSize">@dimen/TS_14sp</item>
        <item name="cornerRadius">@dimen/R_12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <!-- Custom TextFields -->
    <style name="NormalTextFields" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/R_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/R_12dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/R_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/R_12dp</item>
        <item name="fontFamily">@font/dm_regular</item>
        <item name="android:layout_width">@dimen/W_260dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/lightWhite</item>
    </style>


    <!-- Custom Text View -->
    <style name="NormalText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/TS_14sp</item>
        <item name="android:fontFamily">@font/dm_regular</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Custom Tab Text -->
    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textSize">@dimen/TS_12sp</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>